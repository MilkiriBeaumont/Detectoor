<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_btn_alarma_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alarmaOn"
        android:text="Alarma Encendida" />

    <Button
        android:id="@+id/main_btn_alarma_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="alarmaoff"
        android:text="Alarma apagada"
        android:layout_below="@+id/main_btn_alarma_on"
        />

    <Button
        android:id="@+id/main_btn_servo_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SERVO ON"
        android:onClick="servoOn"
        android:layout_below="@id/main_btn_alarma_off"
        />

    <Button
        android:id="@+id/main_btn_servo_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SERVO OFF"
        android:onClick="servoOff"
        android:layout_below="@id/main_btn_servo_on"
        />

    <TextView
        android:id="@+id/main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn_servo_off"
        android:text="texto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        />


</RelativeLayout>
